<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (users.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Number</th>
                        <th scope="col">Username</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user, index) => { %>
                        <tr>
                            <th scope="row"><%= user.user_id %></th>
                            <td><%= user.given_name %></td>
                            <td><%= user.last_name %></td>
                            <td><%= user.contact_no %></td>
                            <td><%= user.username %></td>
                            <td>
                                <a href="/addUser/<%= user.user_id %>" rel="noopener" class="btn btn-sm btn-success">Accept</a>
                                <a href="/declineUser/<%= user.user_id %>" class="btn btn-sm btn-danger">Decline</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No players found. Go <a href="/add" >here</a> to add players.</p>
        <% } %>
    </div>
</div>
</body>
</html>